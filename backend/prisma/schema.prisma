generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models

// user
model User {
  // metadata
  id             String         @id @default(cuid())
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now()) @updatedAt
  // fields
  name           String
  clerkId        String         @unique
  referralCode   String         @unique @default(cuid())
  referredById   String?
  referredByUser User?          @relation("Referrals", fields: [referredById], references: [id])
  Listing        SpaceListing[]
  ReferredUsers  User[]         @relation("Referrals")
  UserListing    UserListing[]
  HelpForm       HelpForm[]
  Referrals      Referral[]

  @@map("user")
}

model Referral {
  id           String   @id @default(cuid())
  referrerId   String
  referrer     User     @relation(fields: [referrerId], references: [id])
  referredUser String
  createdAt    DateTime @default(now())
  status       String   @default("pending")

  @@map("referral")
}

model UserListing {
  id          String  @id @default(cuid())
  user_id     String
  User        User    @relation(fields: [user_id], references: [id])
  housingtype String
  moveInTime  String
  housemates  String
  website     String?
  phone       String?
  email       String?

  @@map("userlisting")
}

model SpaceListing {
  id          String  @id @default(cuid())
  user_id     String
  User        User    @relation(fields: [user_id], references: [id])
  name        String
  description String
  location    String
  housemates  String
  priceRange  String
  website     String?
  image       String?
  phone       String?
  email       String?

  @@map("spacelisting")
}

model HelpForm {
  id       String @id @default(cuid())
  user_id  String
  User     User   @relation(fields: [user_id], references: [id])
  FormData Json

  @@map("helpform")
}
