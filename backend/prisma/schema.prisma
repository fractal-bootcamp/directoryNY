generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// models

// user
model User {
  // metadata
  id             String         @id @default(cuid())
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now()) @updatedAt
  // fields
  displayName    String         @default("Twitter Friend")
  twitterHandle  String         @default("@fractaltechnyc")
  profilePicture String         @default("https://images.spr.so/cdn-cgi/imagedelivery/j42No7y-dcokJuNgXeA0ig/f068d325-7a1f-4b06-a3ce-9cd8bab3f632/DALLE_2024-01-26_18.29.54_-_Create_a_highly_simplified_and_minimalist_pixelated_vector_illustration_of_a_1990s_computer_setup_inspired_by_Susan_Kares_iconic_design_style._The_i/w=256,quality=90,fit=scale-down")
  firebaseId     String?         @unique
  referredId     String?
  referredByUser User?          @relation("Referrals", fields: [referredId], references: [id])
  Listing        SpaceListing[]
  ReferredUsers  User[]         @relation("Referrals")
  UserListing    UserListing[]
  HelpForm       HelpForm[]
  Referrals      Referral[]

  @@map("user")
}

model Referral {
  id           String   @id @default(cuid())
  referrerId   String
  referrer     User     @relation(fields: [referrerId], references: [id])
  referredUser String
  createdAt    DateTime @default(now())
  status       String   @default("pending")

  @@map("referral")
}

model UserListing {
  id          String  @id @default(cuid())
  user_id     String
  User        User    @relation(fields: [user_id], references: [id])
  housingtype String
  moveInTime  String
  housemates  String
  website     String?
  phone       String?
  email       String?

  @@map("userlisting")
}

model SpaceListing {
  id          String  @id @default(cuid())
  user_id     String
  User        User    @relation(fields: [user_id], references: [id])
  name        String
  description String
  location    String
  housemates  String
  priceRange  String
  website     String?
  image       String?
  phone       String?
  email       String?

  @@map("spacelisting")
}

model HelpForm {
  id       String @id @default(cuid())
  user_id  String
  User     User   @relation(fields: [user_id], references: [id])
  FormData Json

  @@map("helpform")
}
